<div class="row my-5">
    <div class="col-6 mx-auto">
        <div class="container">
            <div class="row">
                <div class="col-2 mx-auto mb-2">
                    <%= image_tag('paw-logo.svg', class: 'paw-logo') %>
                </div>
            </div>
            <div class="row">
                <div class="col-12 mx-auto">
                    <h3>BestieLife</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mx-3">
    <div class="col-12 mx-auto">
        <h5>Sign up</h5>
        <p class="text-muted">Register with details</p>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-group form-icons ">
            <span class="fa fa-user"></span>
            <%= f.input :first_name,
                label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "given-name" }%>
        </div>

        <div class="form-group form-icons ">
            <span class="fa fa-user"></span>
            <%= f.input :last_name,
                label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "family-name" }%>
        </div>

        <div class="form-group form-icons ">
            <span class="fa fa-envelope"></span>
            <%= f.input :email,
                label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
        </div>

        <div class="form-group form-icons ">
            <span class="fa fa-lock"></span>
            <%= f.input :password,
                required: true,
                label: false,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-group form-icons ">
            <span class="fa fa-lock"></span>
            <%= f.input :password_confirmation,
                label: false,
                required: true,
                input_html: { autocomplete: "new-password" } %>
        </div>
    </div>
    <div class="form-actions ml-4 mb-3">
        <%= f.button :submit, "Sign up", class: "button-lg primary-blue my-3" %>
        <%= render "devise/shared/links" %>
    </div>
    <% end %>
</div>