<div class="pets-main">
    <%= render 'components/header', path: root_path %>
    <div class="profile-header">
    <div class="profile-pic">
        <% if @pet.photos.any? %>
        <%= image_tag(@pet.photos.first, class: 'avatar rounded-circle') %>
        <%end%>
        <div class="profile-text">
                <h3><%= @pet.pet_name %></h3>
            </div>
    </div>
    <div class="photos-add-remove">
    <div class="d-flex">
    <% if current_user == @pet.user %>
        <%= simple_form_for :pet, url: add_picture_pet_path, method: :post do |f| %>
        <%= f.input :photo, required: false, input_html: { class: 'd-none'}, label_html: {class: 'add-photo-button'}, as: :file, :label => "ðŸ“·"  %> 
        <%= f.submit :submit, value: 'Add', class: 'button button-sm primary-green', "data-disable-with" => "Submit.." %> 
    <% end %>
    <% end %>
    </div>
    </div>
        <div class="pets-body">
            <% @pet.photos.each do |photo| %>
                <div class="card">
                <%= cl_image_tag photo.key, :aspect_ratio=>"1:1", :radius=>"20:80", crop: :fill %>
                <%= link_to "See picture", photo_path(photo.id) %>
                </div>
                <% end %>
        </div>
</div>