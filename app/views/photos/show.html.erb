<div class="photos-main">
    <%= render 'components/header', path: pet_path(@pet) %>
    <h1>Photos#show</h1>
    <div class="photos-body">
        <div class="card">
        <%= cl_image_tag @photo.key, width: 100 %>
        <% if current_user == @pet.user %>
            <div class="info"> 
            <%= link_to "delete", remove_picture_pet_path(@photo.id), method: :delete %>
        <% end %>
        </div>
    </div>
    </div>
</div>