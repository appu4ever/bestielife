<div class="row">
    <div class="col-12">
        <%= month_calendar(number_of_weeks: 1) do |date| %>
        <div><%= date.to_formatted_s(:short)[0...-4] %></div>
        <% end %>
    </div>
</div>

<div class="row d-flex flex-column">
    <%if events.length.zero? %>
    <div class="no-expense-container mx-auto mt-5">
        <p>You do not have any events for this month</p>
    </div>
    <%else %>
    <div class="col flex-column">
        <div class="container">
            <% events.each do |event| %>
            <%= render 'event-card', event: event %>
            <%end%>
        </div>
    </div>
    <%end%>
</div>