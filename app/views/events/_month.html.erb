<div class="table-responsive mt-4">
    <%= month_calendar(events: events) do |date, meetings| %>
    <div class="col">
        <%= date.to_formatted_s(:short)[0...-4] %>
    </div>
    <ul class="monthly-event-list">
        <% meetings.each do |meeting| %>
        <li class="card rounded shadow p-2">
            <%= link_to "#{meeting.name[0,8]...}", event_path(meeting) %>
        </li>
        <% end %>
    </ul>
    <% end %>
</div>