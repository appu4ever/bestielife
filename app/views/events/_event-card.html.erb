<div class="row card shadow rounded flex-row p-3 my-2">
    <div class="col-9 mx-auto">
        <div class="container">
            <div class="row mb-2">
                <h6 class="text-center">Description</h6>
                <span class="text-muted"><%= event.description %></span>
            </div>
            <% if defined?(week_view) %>
            <div class="row mb-2">
                <%= link_to event.name, event_path(event) %>
            </div>
            <%end%>
            <div class="row mt-4">
                <div class="col-2 ml-auto d-flex">
                    <%= link_to image_tag('edit.svg', class: "icon edit mr-2"), edit_event_path(event) %>
                    <%= link_to image_tag('delete.svg', class: "icon delete"), event_path(event), method: :delete %>
                </div>
            </div>
        </div>
    </div>
</div>